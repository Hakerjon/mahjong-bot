def load_data():
    if os.path.exists(DATA_FILE):
        with open(DATA_FILE, "r") as f:
            try:
                content = f.read().strip()
                return json.loads(content) if content else {"players": [], "games": []}
            except json.JSONDecodeError:
                return {"players": [], "games": []}
    return {"players": [], "games": []}
